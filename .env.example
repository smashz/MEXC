# MEXC API Configuration
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Trading Configuration
SYMBOL=BTC_USDT
TIMEFRAME=5m
LEVERAGE=1
DRY_RUN=true
TRADE_AMOUNT=10.0
MAX_ORDERS_PER_DAY=10
STOP_LOSS_PCT=2.0
TAKE_PROFIT_PCT=3.0

# AI Strategy Configuration
MODEL_PATH=amazon/chronos-t5-small
PREDICTION_LENGTH=12
LOOKBACK_PERIODS=24
MAX_HISTORICAL_DATA=1000
CONFIDENCE_THRESHOLD=0.65
MIN_TREND_STRENGTH=0.4
UPDATE_INTERVAL=300
FEATURE_COLUMNS=close,volume,high,low
TARGET_COLUMN=close

# Trading Windows (optional)
# Format: START_TIME/END_TIME,START_TIME2/END_TIME2
TRADING_WINDOWS=09:30/16:30

# Risk Management
MAX_DRAWDOWN_PCT=15.0
RISK_PER_TRADE_PCT=1.0
POSITION_SIZING=dynamic

# Performance Tracking
LOG_LEVEL=INFO
TRACK_METRICS=true
SAVE_PREDICTIONS=true
HEADLESS=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10.0